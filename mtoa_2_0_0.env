{
    "environment": {
        "ARNOLD_PLUGIN_PATH": "${MTOA}/shaders",
        "DYLD_LIBRARY_PATH": {
            "darwin": "${MTOA}/bin"
        },
        "MAYA_MODULE_PATH": "${MTOA}",
        "MAYA_RENDER_DESC_PATH": "${MTOA}",
        "MTOA": "${PG_SW_BASE}/solidangle/mtoa_${MAYA_VERSION}_${MTOA_VERSION}",
        "MTOA_EXTENSIONS": {
            "darwin": "${MTOA}/extensions",
            "linux": "${MTOA}/extensions",
            "windows": "${MTOA}/extensions"
        },
        "MTOA_EXTENSIONS_PATH": {
            "darwin": "${MTOA}/extensions",
            "linux": "${MTOA}/extensions",
            "windows": "${MTOA}/extensions"
        },
        "MTOA_VERSION": "2.0.0.0",
        "PATH": {
            "windows": "${MTOA}/bin"
        }
    },
    "optional": {
        "dev": {
            "MTOA_EXTENSIONS": {
                "abs": true,
                "common": "${DEV_BUILDS}"
            },
            "MTOA_EXTENSIONS_PATH": {
                "abs": true,
                "common": "${DEV_BUILDS}"
            }
        }
    },
    "platforms": [
        "windows",
        "linux",
        "darwin"
    ],
    "requires": [
        "maya"
    ],
    "tool": "mtoa", 
    "version": "2.0.0"
}
